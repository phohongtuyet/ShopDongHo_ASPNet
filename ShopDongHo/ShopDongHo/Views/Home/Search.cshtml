@model IEnumerable<ShopDongHo.Models.DongHo>
@{
    ViewBag.Title = "Kết quả tìm kiếm";
}
<div>
    <div id="slider" class="carousel slide" data-ride="carousel">


        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/slide1.jpg" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide2.jpg" class="d-block w-100" alt="">
            </div>
            <div class="carousel-item">
                <img src="~/Images/slide3.jpg" class="d-block w-100" alt="">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#slider" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#slider" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>

        <div class="card mt-3">
            <h5 class="card-header">@ViewBag.Title</h5>
            <div class="card-body">
                <div class="card-deck">
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {

                            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                                <div class="card list-books">
                                    <img src="~/@item.HinhAnhDH" class="card-img-top" alt="...">
                                    <div class="card-body al">
                                        <h5 class="card-title text-center">@item.TenDongHo</h5>
                                        <p class="card-text text-center">@String.Format("{0:N0}", item.DonGia) VNĐ</p>
                                    </div>
                                    <div class="card-footer text-center">
                                        <a href="@Url.Action("ThemVaoGio", "GioHang", new { maSP = item.ID })" class="btn btn-danger">Giỏ hàng</a>
                                        <a href="@Url.Action("Details", "Home", new { maSP = item.ID })" class="btn btn-info m-1">Chi tiết</a>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p>Không tìm thấy kết quả phù hợp</p>
                    }
                </div>
            </div>
        </div>

