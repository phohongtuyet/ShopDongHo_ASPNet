@model ShopDongHo.Models.ThuongHieu

@{
    ViewBag.Title = "Thêm thương hiệu";
}


<div class="card mt-3">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.TenThuongHieu, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.TenThuongHieu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenThuongHieu, "", new { @class = "text-danger" })

                </div>
                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Thêm" class="btn btn-success" /> hoặc  @Html.ActionLink("Trở về", "Index")
                    </div>
                </div>
            </div>
        }

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
